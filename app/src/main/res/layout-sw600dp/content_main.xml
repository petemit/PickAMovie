<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.pickamovie.MainMovieActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/mainTextSize"
        android:textColor="@color/whiteText"
        android:text="@string/loading_content"
        android:paddingLeft="@dimen/text_padding"
        android:paddingBottom="@dimen/text_padding"
        android:paddingTop="@dimen/slight_indentation"
        android:id="@+id/tv_text_loading"
        android:visibility="visible"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="@dimen/text_padding"
        android:id="@+id/pb_loading_progressbar"
        android:visibility="visible"
        />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_mainMovie"
        android:visibility="invisible">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
